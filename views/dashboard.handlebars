    <div class="container p-3">
        <div class="row text-center p-3">
            <h3 class="col-lg-12 text-center p-3">Welcome, {{ username }}!</h3>

            <div class="col-lg-6 col-sm-12 post rounded border border-secondary border-2 p-2">
                <h3 class="text-center p-2">Write a New Blog Post:</h3>

                <form class="form new-post-form">
                    <div class="form-group form-control-lg p-2">
                        <label for="post-title">Title:</label>
                        <input class="form-control" type="text" id="post-title" name="post-title" />
                    </div>
                    <div class="form-group form-control-lg p-2">
                        <label for="blog-content">Content:</label>
                        <textarea class="form-control" id="blog-content" name="blog-content"></textarea>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary m-2">Publish Post</button>
                    </div>
                </form>
            </div>

            {{#if blogs.length}}
            <div class="col-lg-6 col-sm-12 blog-list text-center post rounded border border-secondary border-2 p-2">
                <h3 class="p-2">Your Blog Posts:</h3>

                {{#each blogs as |blog|}}
                <div class="row mb-2">
                    <div class="col-md-8">
                        <h4><a href="/blog/{{ blog.id }}">{{ blog.title }}</a></h4>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-sm btn-primary m-2" data-id="{{ blog.id }}">Edit</button>
                        <button class="btn btn-sm btn-danger m-2" data-id="{{ blog.id }}">Delete</button>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/if}}
        </div>
    </div>
<script src="./js/blog.js"></script>